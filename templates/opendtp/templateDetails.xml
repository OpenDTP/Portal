<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.0" type="template" client="site">
    <name>Opendtp Template</name>
    <version>1.0</version>
    <creationDate>mars 2014</creationDate>
    <author>Cyril CHAUGNE</author>
    <authorEmail>chaugn_c@etna-alternance.net</authorEmail>
    <copyright>Copyright (C) 2014 OpenDTP All rights reserved.</copyright>
    <description>TPL_OPENDTP_XML_DESCRIPTION</description>
    <files>
        <filename>favicon.ico</filename>
        <filename>index.html</filename>
        <filename>index.php</filename>
        <filename>templateDetails.xml</filename>
        <folder>images</folder>
        <folder>css</folder>
        <folder>js</folder>
        <folder>fonts</folder>
        <folder>html</folder>
    </files>
    <positions>
        <position>banner</position>
        <position>position-0</position>
        <position>position-1</position>
        <position>position-2</position>
        <position>position-3</position>
        <position>position-4</position>
        <position>position-5</position>
        <position>position-6</position>
        <position>position-7</position>
        <position>position-8</position>
        <position>position-9</position>
        <position>position-10</position>
        <position>position-11</position>
        <position>position-12</position>
        <position>position-13</position>
        <position>position-14</position>
        <position>position-15</position>
        <position>slider-1</position>
        <position>footer</position>
        <position>debug</position>
    </positions>
    <languages folder="language">
        <language tag="fr-FR">fr-FR/fr-FR.tpl_opendtp.ini</language>
        <language tag="fr-FR">fr-FR/fr-FR.tpl_opendtp.sys.ini</language>
        <language tag="en-GB">en-GB/en-GB.tpl_opendtp.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_opendtp.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="advanced">
                <field
                name="templateBackgroundColor"
                type="color"
                default="#F4F6F7"
                label="TPL_OPENDTP_BACKGROUND_COLOR_LABEL"
                description="TPL_OPENDTP_BACKGROUND_COLOR_DESC" />
            </fieldset>
        </fields>
    </config>
</extension>